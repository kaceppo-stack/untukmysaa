    // Render poems
    const listEl = document.getElementById('poemsList');
    const jsonArea = document.getElementById('jsonArea');
    const preview = document.getElementById('preview');

    function renderPoems(data){
      listEl.innerHTML = '';
      data.items.forEach(item => {
        const box = document.createElement('div');
        box.className = 'poem';
        box.innerHTML = `<h3>${escapeHtml(item.title)}</h3><p>${escapeHtml(item.text)}</p><div class="meta">${item.emojis.join(' ')} · <span class="small">${item.length} · ${item.tone}</span></div>`;
        listEl.appendChild(box);
      });
      jsonArea.value = JSON.stringify(data, null, 2);
      preview.textContent = data.items[0].text.slice(0,80) + (data.items[0].text.length>80? '...':'');
    }

    function escapeHtml(s){return String(s).replace(/[&<>"']/g, function(c){return{'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[c];});}

    renderPoems(poemsData);

    // Download JSON
    document.getElementById('downloadJson').addEventListener('click', ()=>{
      const blob = new Blob([JSON.stringify(poemsData, null, 2)], {type:'application/json'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a'); a.href = url; a.download = 'puisi-meysaa.json'; document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(url);
    });

    // Copy JSON
    document.getElementById('copyJson').addEventListener('click', ()=>{
      navigator.clipboard.writeText(JSON.stringify(poemsData, null, 2)).then(()=>{
        alert('JSON disalin ke clipboard!');
      }).catch(()=>{ alert('Gagal menyalin — mungkin browser kamu mencegah.'); });
    });

    // Shuffle poems
    document.getElementById('shuffle').addEventListener('click', ()=>{
      const shuffled = {...poemsData, items: [...poemsData.items].sort(()=>Math.random()-0.5)};
      renderPoems(shuffled);
    });
  </script>
